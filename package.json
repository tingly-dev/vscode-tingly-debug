{
    "name": "tingly-debug",
    "displayName": "Tingly Debug Configurations",
    "publisher": "Tingly-Dev",
    "description": "A debug and run configuration manager and UI for VS Code",
    "version": "0.1.1128",
    "engines": {
        "vscode": "^1.90.0"
    },
    "repository": {
        "url": "https://github.com/Tingly-Dev/vscode-tingly-debug"
    },
    "categories": [
        "Visualization",
        "Programming Languages",
        "Debuggers",
        "Testing"
    ],
    "icon": "resource/lightning-helix.png",
    "activationEvents": [],
    "browser": "./dist/web/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "tingly.debug.helloWorld",
                "title": "Tingly: Hello World"
            },
            {
                "command": "tingly.debug.debugConfig.refresh",
                "title": "Tingly: Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "tingly.debug.debugConfig.add",
                "title": "Tingly: Add Configuration",
                "icon": "$(add)"
            },
            {
                "command": "tingly.debug.debugConfig.edit",
                "title": "Tingly: Edit Configuration",
                "icon": "$(edit)"
            },
            {
                "command": "tingly.debug.debugConfig.delete",
                "title": "Tingly: Delete Configuration",
                "icon": "$(trash)"
            },
            {
                "command": "tingly.debug.debugConfig.duplicate",
                "title": "Tingly: Duplicate Configuration",
                "icon": "$(copy)"
            },
            {
                "command": "tingly.debug.debugConfig.run",
                "title": "Tingly: Run Configuration",
                "icon": "$(play)"
            },
            {
                "command": "tingly.debug.debugConfig.debug",
                "title": "Tingly: Debug Configuration",
                "icon": "$(debug)"
            },
            {
                "command": "tingly.debug.debugConfig.createFromFile",
                "title": "Tingly: Debug from Active File",
                "icon": "$(lightbulb)"
            },
            {
                "command": "tingly.debug.debugConfig.openSettings",
                "title": "Tingly: Configuration Settings",
                "icon": "$(gear)"
            },
            {
                "command": "tingly.debug.generateDebugCommand",
                "title": "Tingly: Debug from Symbol",
                "icon": "$(debug)"
            },
            {
                "command": "tingly.debug.generateDebugConfigFromDirectory",
                "title": "Tingly: Debug from Directory",
                "icon": "$(debug)"
            }
        ],
        "views": {
            "debug": [
                {
                    "id": "tingly.debug.debugConfigurations",
                    "name": "Tingly Debug Configurations"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "tingly.debug.debugConfig.add",
                    "when": "view == tingly.debug.debugConfigurations",
                    "group": "navigation"
                },
                {
                    "command": "tingly.debug.debugConfig.createFromFile",
                    "when": "view == tingly.debug.debugConfigurations",
                    "group": "navigation"
                },
                {
                    "command": "tingly.debug.debugConfig.refresh",
                    "when": "view == tingly.debug.debugConfigurations",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "tingly.debug.debugConfig.createFromFile",
                    "when": "resourceExtname =~ /\\.(js|ts|tsx|jsx|mjs|cjs|py|java|cpp|c|go|rs|php|rb|cs|html|htm|dart|ps1|sh|bash|zsh|fish|lua|ex|exs|kt|kts|scala|sc)$/",
                    "group": "navigation"
                },
                {
                    "command": "tingly.debug.generateDebugCommand",
                    "when": "resourceExtname =~ /\\.(js|ts|tsx|jsx|mjs|cjs|py|java|cpp|c|go|rs|php|rb|cs|html|htm|dart|ps1|sh|bash|zsh|fish|lua|ex|exs|kt|kts|scala|sc)$/",
                    "group": "1_symbol@1"
                }
            ],
            "editor/context": [
                {
                    "command": "tingly.debug.generateDebugCommand",
                    "when": "resourceExtname =~ /\\.(js|ts|tsx|jsx|mjs|cjs|py|java|cpp|c|go|rs|php|rb|cs|html|htm|dart|ps1|sh|bash|zsh|fish|lua|ex|exs|kt|kts|scala|sc)$/",
                    "group": "tingly.debug@1"
                }
            ],
            "explorer/context": [
                {
                    "command": "tingly.debug.generateDebugConfigFromDirectory",
                    "when": "explorerResourceIsFolder",
                    "group": "tingly.debug@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "tingly.debug.debugConfig.run",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "inline@1"
                },
                {
                    "command": "tingly.debug.debugConfig.debug",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "inline@2"
                },
                {
                    "command": "tingly.debug.debugConfig.openSettings",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "inline@3"
                },
                {
                    "command": "tingly.debug.debugConfig.edit",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "1_modification"
                },
                {
                    "command": "tingly.debug.debugConfig.duplicate",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "1_modification"
                },
                {
                    "command": "tingly.debug.debugConfig.delete",
                    "when": "view == tingly.debug.debugConfigurations && viewItem == configuration",
                    "group": "1_modification"
                }
            ]
        }
    },
    "configuration": {
        "title": "Debug Configurations",
        "properties": {
            "tingly.debug.clickBehavior": {
                "type": "string",
                "enum": [
                    "openSettings",
                    "none"
                ],
                "default": "openSettings",
                "description": "Behavior when clicking on configuration items in the tree view",
                "enumDescriptions": [
                    "Open configuration settings when clicking an item",
                    "No action when clicking an item (use toolbar buttons instead)"
                ]
            },
            "tingly.debug.nameCollisionSuffixStyle": {
                "type": "string",
                "enum": [
                    "index",
                    "timestamp"
                ],
                "default": "index",
                "description": "Style of suffix to add when configuration name collides",
                "enumDescriptions": [
                    "Use numeric index (e.g., '- 1', '- 2')",
                    "Use timestamp (e.g., '-20250811-129900')"
                ]
            }
        }
    },
    "scripts": {
        "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
        "pretest": "npm run compile-web",
        "vscode:prepublish": "npm run package-web",
        "compile-web": "webpack",
        "watch-web": "webpack --watch",
        "package-web": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src",
        "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
    },
    "devDependencies": {
        "@types/assert": "^1.5.11",
        "@types/mocha": "^10.0.10",
        "@types/vscode": "1.90.0",
        "@types/webpack-env": "^1.18.8",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/test-web": "^0.0.74",
        "@vscode/vsce": "^3.7.1",
        "assert": "^2.1.0",
        "eslint": "^9.39.1",
        "mocha": "^11.7.5",
        "process": "^0.11.10",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "webpack": "^5.103.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@types/strip-json-comments": "^0.0.30",
        "fs": "0.0.1-security",
        "strip-json-comments": "^5.0.3"
    }
}